<form action="<%= formActionSlug %>" method="POST">
    <div class="mb-3">
        <input 
            class="form-control"
            type="text" 
            name="username" 
            placeholder="username" 
            minlength="2" 
            required
            autofocus>
    </div>
    <div class="mb-3">
        <input
            class="form-control" 
            type="password" 
            name="password" 
            placeholder="password" 
            minlength="8" 
            required>
    </div>
    <button type="submit" class="btn btn-primary">
        <%= title %>
    </button>
</form>